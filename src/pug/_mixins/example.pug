mixin example(url)
  - var id = tabId++
  
  .example
    ul.nav.nav-underline(role="tablist")
      li.nav-item
        a.nav-link.active.px-3(data-coreui-toggle="tab" href="#preview-"+id role="tab")
          svg.icon.me-2
            use(xlink:href="node_modules/@coreui/icons/sprites/free.svg#cil-media-play")
            |
          | Preview
      if url
        li.nav-item
          a.nav-link.px-3(href=url target="_blank")
            svg.icon.me-2
              use(xlink:href="node_modules/@coreui/icons/sprites/free.svg#cil-code")
              |
            | Code
    .tab-content.rounded-bottom
      .tab-pane.p-3.active.preview(role="tabpanel" id="preview-"+id )
        block
